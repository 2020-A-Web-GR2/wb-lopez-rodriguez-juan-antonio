<%- include('componentes/menu-component') %>
<%- include('componentes/estilos-component') %>


<h1>Inicio</h1>

<a href="/cancion/vista/crear">
    <button>Crear</button>
</a>

<% if(typeof parametrosConsulta != 'undefined'){ %>
<p>MENSAJE: <%=parametrosConsulta.mensaje%></p>
<%}%>
<table>
    <tr>
        <th>Nombre</th>
        <th>Album</th>
        <th>Autor</th>
        <th>Genero</th>
        <th>AÃ±o</th>
        <th>Acciones</th>
    </tr>
    <% arregloCanciones.forEach( (objeto)=> { %>
    <tr>
        <td><%=objeto.nombre %></td>
        <td><%=objeto.album %></td>
        <td><%=objeto.autor %></td>
        <td><%=objeto.genero %></td>
        <td><%=objeto.anio %></td>
        <td>
            <button>Ver</button>

            <a href="/cancion/vista/editarCancion/<%=objeto.id%>">
            <button>Editar</button>
            </a>

            <form action="/cancion/eliminarCancionDesdeVista/<%= objeto.id %>"
            method="POST"
            >
            <button type="submit">Eliminar</button>
            </form>
        </td>
    </tr>
    <% }) %>

</table>